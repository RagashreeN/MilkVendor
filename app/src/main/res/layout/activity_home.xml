<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="userHomeVM"
            type="com.milk.vendor.feature.home.HomeViewModel" />
    </data>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            >

            <TextView
                android:id="@+id/area_header"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:maxLines="1"
                android:minWidth="100dp"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:text="Milk Vendor"/>

            <ImageView
                android:id="@+id/cart_id"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top"
                android:padding="2dp"
                android:src="@drawable/cart"
                android:layout_alignParentRight="true"
                android:tint="@color/colorWhite"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_milklist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayout"
            android:layout_above="@+id/layout_payment"/>
        <RelativeLayout
            android:id="@+id/layout_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="15dp"
            android:layout_marginBottom="0dp"
            android:background="@color/colorWhite"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/pay_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:gravity="right"
                android:text="Amount : 0 \u20B9"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ProgressBar
                android:id="@+id/progressbar_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                />
        </RelativeLayout>

    </RelativeLayout>
</layout>